{
  "title": "Publish a new data asset",
  "description": "A cool form description",
  "steps": [
    {
      "title": "Essentials",
      "description": "A description about these essential fields",
      "fields": {
        "name": {
          "label": "Title",
          "placeholder": "i.e. My cool data set",
          "type": "text",
          "required": true,
          "help": "Help me Obiwan"
        },
        "files": {
          "label": "Files",
          "placeholder": "i.e. https://file.com/file.json",
          "type": "text",
          "required": true,
          "help": "Provide one or multiple urls to your data set files."
        }
      }
    },
    {
      "title": "Information",
      "description": "A description about these fields",
      "fields": {
        "description": {
          "label": "Description",
          "placeholder": "i.e. My cool data set",
          "type": "textarea",
          "required": true,
          "rows": 5
        },
        "categories": {
          "label": "Categories",
          "type": "select",
          "options": [
            "Image Recognition",
            "Dataset Of Datasets",
            "Language",
            "Performing Arts",
            "Visual Arts & Design",
            "Philosophy",
            "History",
            "Theology",
            "Anthropology & Archeology",
            "Sociology",
            "Psychology",
            "Politics",
            "Interdisciplinary",
            "Economics & Finance",
            "Demography",
            "Biology",
            "Chemistry",
            "Physics & Energy",
            "Earth & Climate",
            "Space & Astronomy",
            "Mathematics",
            "Computer Technology",
            "Engineering",
            "Agriculture & Bio Engineering",
            "Transportation",
            "Urban Planning",
            "Medicine",
            "Business & Management",
            "Sports & Recreation",
            "Communication & Journalism",
            "Other"
          ]
        }
      }
    },
    {
      "title": "Authorship",
      "description": "A description about these credentials fields",
      "fields": {
        "author": {
          "label": "Author",
          "placeholder": "i.e. Jelly McJellyfish",
          "type": "text",
          "required": true
        },
        "copyrightHolder": {
          "label": "Copyright Holder",
          "placeholder": "i.e. fwhfiw",
          "type": "text",
          "required": true
        },
        "license": {
          "label": "License",
          "type": "select",
          "required": true,
          "options": [
            "Public Domain",
            "CC BY: Attribution",
            "CC BY-SA: Attribution ShareAlike",
            "CC BY-ND: Attribution-NoDerivs",
            "CC BY-NC: Attribution-NonCommercial",
            "CC BY-NC-SA: Attribution-NonCommercial-ShareAlike",
            "CC BY-NC-ND: Attribution-NonCommercial-NoDerivs"
          ]
        }
      }
    },
    {
      "title": "Register",
      "description": "We got all the data, now let's register your data set.",
      "content": "After clicking the button below you will be asked by your wallet to sign this request."
    }
  ]
}
